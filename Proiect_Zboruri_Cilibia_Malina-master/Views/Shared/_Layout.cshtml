<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect_Zboruri_Cilibia_Malina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_Zboruri_Cilibia_Malina.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Flight Manager
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item border-start mx-2 d-none d-md-block" style="border-color: #b2ebf2 !important;"></li>

                        <li class="nav-item"><a class="nav-link" asp-controller="Flights" asp-action="Index">Zboruri</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Bookings" asp-action="Index">Rezervări</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Passengers" asp-action="Index">Pasageri</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Airlines" asp-action="Index">Companii</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Airports" asp-action="Index">Aeroporturi</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TicketClasses" asp-action="Index">Clase de zbor</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SatisfactionPrediction" asp-action="Index">Calculator de satisfacție</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="IncidentsGrpc" asp-action="Index">Incidente (gRPC)</a></li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Proiect_Zboruri_Cilibia_Malina - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
