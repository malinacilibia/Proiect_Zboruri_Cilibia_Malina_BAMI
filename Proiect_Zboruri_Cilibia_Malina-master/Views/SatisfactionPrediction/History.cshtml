@model IEnumerable<Proiect_Zboruri_Cilibia_Malina.Models.SatisfactionPredictionHistory>

@{
    ViewData["Title"] = "Istoric complet";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #006064;">Istoric complet predicții</h2>
        <a asp-action="Index" class="btn btn-teal rounded-pill">Înapoi la formular</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Nu există nicio predicție salvată în istoric momentan.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 table-sm align-middle" style="font-size: 0.9rem;">
                        <thead style="background-color: #006064; color: white; text-align: center;">
                            <tr>
                                <th class="p-2">Data și ora</th>

                                <th>Gen</th>
                                <th>Tip client</th>
                                <th>Vârstă</th>

                                <th>Tip zbor</th>
                                <th>Clasă</th>
                                <th>Distanță</th>

                                <th style="width: 250px;">Evaluare servicii</th>

                                <th>Întârziere plecare</th>
                                <th>Întârziere sosire</th>

                                <th class="p-2">Predicție</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.CreatedAt.ToString("g")</td>

                                    <td>@item.Gender</td>
                                    <td>@item.CustomerType</td>
                                    <td>@item.Age</td>

                                    <td>@item.TypeOfTravel</td>
                                    <td>@item.Class</td>
                                    <td>@item.FlightDistance km</td>

                                    <td class="text-start p-2" style="font-size: 0.8rem; line-height: 1.4;">
                                        <div class="row">
                                            <div class="col-6">
                                                <span class="text-muted">Scaun:</span> <strong>@item.SeatComfort</strong><br>
                                                <span class="text-muted">Wifi:</span> <strong>@item.InflightWifiService</strong><br>
                                                <span class="text-muted">Mâncare:</span> <strong>@item.FoodAndDrink</strong><br>
                                                <span class="text-muted">Divertisment:</span> <strong>@item.InflightEntertainment</strong><br>
                                                <span class="text-muted">Boarding:</span> <strong>@item.OnlineBoarding</strong><br>
                                                <span class="text-muted">Picioare:</span> <strong>@item.LegRoomService</strong><br>
                                                <span class="text-muted">Srv. bord:</span> <strong>@item.OnBoardService</strong>
                                            </div>
                                            <div class="col-6">
                                                <span class="text-muted">Check-in:</span> <strong>@item.CheckinService</strong><br>
                                                <span class="text-muted">Srv. zbor:</span> <strong>@item.InflightService</strong><br>
                                                <span class="text-muted">Curățenie:</span> <strong>@item.Cleanliness</strong><br>
                                                <span class="text-muted">Poartă:</span> <strong>@item.GateLocation</strong><br>
                                                <span class="text-muted">Bagaje:</span> <strong>@item.BaggageHandling</strong><br>
                                                <span class="text-muted">Booking:</span> <strong>@item.EaseOfOnlineBooking</strong><br>
                                                <span class="text-muted">Convenabil:</span> <strong>@item.DepartureArrivalTimeConvenient</strong>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        @if (item.DepartureDelayInMinutes == 0)
                                        {
                                            <span class="badge bg-success" style="opacity: 0.8;">La timp</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-bold">@item.DepartureDelayInMinutes min</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ArrivalDelayInMinutes == 0)
                                        {
                                            <span class="badge bg-success" style="opacity: 0.8;">La timp</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-bold">@item.ArrivalDelayInMinutes min</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.PredictedSatisfaction == "satisfied")
                                        {
                                            <span class="badge bg-success" style="font-size: 0.9rem;">Satisfied</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark" style="font-size: 0.9rem;">Neutral or dissatisfied</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>