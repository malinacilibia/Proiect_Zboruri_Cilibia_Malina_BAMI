@model Proiect_Zboruri_Cilibia_Malina.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightID" class="control-label"></label>
                <select asp-for="FlightID" class ="form-control" asp-items="ViewBag.FlightID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PassengerID" class="control-label"></label>
                <select asp-for="PassengerID" class ="form-control" asp-items="ViewBag.PassengerID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Select Ticket Class:</label>
                <div class="border p-2 rounded">
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewData["TicketClassID"])
                    {
                        <div class="form-check">
                            <input type="radio" asp-for="TicketClassID" value="@item.Value" class="form-check-input" id="class_@item.Value" />

                            <label class="form-check-label" for="class_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="TicketClassID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
