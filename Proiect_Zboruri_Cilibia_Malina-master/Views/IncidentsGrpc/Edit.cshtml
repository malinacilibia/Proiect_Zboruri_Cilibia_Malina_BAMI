@model GrpcIncidentsService.Incident

@{
    ViewData["Title"] = "Editare incident";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background-color: #006064;">
                    <h4 class="mb-0">Editare incident #@Model.Id</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Titlu incident</label>
                            <input asp-for="Title" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descriere</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsResolved" />
                            <label class="form-check-label" asp-for="IsResolved">
                                Problema este rezolvată?
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Salvează modificările" class="btn btn-lg text-white" style="background-color: #006064; border-color: #006064;" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Anulează</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>